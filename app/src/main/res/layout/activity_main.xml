<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".MainActivity">

    <TextView
            android:text="Time: 60"
            android:layout_width="192dp"
            android:layout_height="29dp"
            android:id="@+id/tv_time"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="22sp" android:gravity="center" android:textColor="@android:color/white"
            app:layout_constraintStart_toEndOf="@+id/imageViewLove" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageViewLove1" android:layout_marginRight="8dp"/>
    <ImageView
            android:layout_width="74dp"
            android:layout_height="55dp" android:src="@drawable/icone_love"
            android:id="@+id/imageViewLove2"
            app:layout_constraintTop_toTopOf="@+id/tv_score" app:layout_constraintBottom_toBottomOf="@+id/tv_score"
            app:layout_constraintStart_toStartOf="@+id/gridLayout2" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Score: 0"
            android:layout_width="178dp"
            android:layout_height="29dp"
            android:id="@+id/tv_score"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="22sp"
            android:textColor="@android:color/white" android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/imageViewLove2" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>
    <ImageView
            android:layout_width="74dp"
            android:layout_height="55dp" android:src="@drawable/icone_love"
            android:id="@+id/imageViewLove3"
            app:layout_constraintStart_toEndOf="@+id/tv_score" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/tv_score"
            app:layout_constraintBottom_toBottomOf="@+id/tv_score" app:layout_constraintEnd_toEndOf="@+id/gridLayout2"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <android.support.v7.widget.GridLayout
            android:layout_width="0dp"
            android:layout_height="362dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_time" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_score" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:id="@+id/gridLayout2">

        <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/clara_icon"
                app:layout_column="0"
                app:layout_row="0"
                android:onClick="increaseScore"
                android:id="@+id/imageView"/>

        <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/clara_icon"
                app:layout_column="1"
                app:layout_row="0"
                android:onClick="increaseScore"
                android:id="@+id/imageView1"/>

        <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/clara_icon"
                app:layout_column="2"
                app:layout_row="0"
                android:onClick="increaseScore"
                android:id="@+id/imageView2"/>

        <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/clara_icon"
                app:layout_column="3"
                app:layout_row="0"
                android:onClick="increaseScore"
                android:id="@+id/imageView3"/>


        <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/clara_icon"
                app:layout_column="0"
                app:layout_row="1"
                android:onClick="increaseScore"
                android:id="@+id/imageView4"/>

        <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/clara_icon"
                app:layout_column="1"
                app:layout_row="1"
                android:onClick="increaseScore"
                android:id="@+id/imageView5"/>

        <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/clara_icon"
                app:layout_column="2"
                app:layout_row="1"
                android:onClick="increaseScore"
                android:id="@+id/imageView6"/>

        <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/clara_icon"
                app:layout_column="3"
                app:layout_row="1"
                android:onClick="increaseScore"
                android:id="@+id/imageView7"/>


        <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/clara_icon"
                app:layout_column="0"
                app:layout_row="2"
                android:onClick="increaseScore"
                android:id="@+id/imageView8"/>

        <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/clara_icon"
                app:layout_column="1"
                app:layout_row="2"
                android:onClick="increaseScore"
                android:id="@+id/imageView9"/>

        <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/clara_icon"
                app:layout_column="2"
                app:layout_row="2"
                android:onClick="increaseScore"
                android:id="@+id/imageView10"/>

        <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/clara_icon"
                app:layout_column="3"
                app:layout_row="2"
                android:onClick="increaseScore"
                android:id="@+id/imageView11"/>


        <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/clara_icon"
                app:layout_column="0"
                app:layout_row="3"
                android:onClick="increaseScore"
                android:id="@+id/imageView12"/>

        <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/clara_icon"
                app:layout_column="1"
                app:layout_row="3"
                android:onClick="increaseScore"
                android:id="@+id/imageView13"/>

        <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/clara_icon"
                app:layout_column="2"
                app:layout_row="3"
                android:onClick="increaseScore"
                android:id="@+id/imageView14"/>

        <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/clara_icon"
                app:layout_column="3"
                app:layout_row="3"
                android:onClick="increaseScore"
                android:id="@+id/imageView15"/>
    </android.support.v7.widget.GridLayout>
    <ImageView
            android:layout_width="74dp"
            android:layout_height="55dp" android:src="@drawable/icone_love"
            android:id="@+id/imageViewLove"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/gridLayout2"/>
    <ImageView
            android:layout_width="74dp"
            android:layout_height="55dp" android:src="@drawable/icone_love"
            android:id="@+id/imageViewLove1"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/gridLayout2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <ImageView
            android:layout_width="355dp"
            android:layout_height="241dp" app:srcCompat="@drawable/sam_clark"
            android:id="@+id/imageViewSamClark" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"/>
    <TextView
            android:text="True love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textStyle="bold"
            android:id="@+id/textViewSamClark" android:textSize="24sp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/imageViewSamClark" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/gridLayout2" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/imageViewSamClark"
            android:layout_marginLeft="8dp"/>
</android.support.constraint.ConstraintLayout>